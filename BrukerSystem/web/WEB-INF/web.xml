<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>no.hvl.dat104.controller.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LogoutSerlvet</servlet-name>
        <servlet-class>no.hvl.dat104.controller.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutSerlvet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>RegistrerBrukerServlet</servlet-name>
        <servlet-class>no.hvl.dat104.controller.RegistrerBrukerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegistrerBrukerServlet</servlet-name>
        <url-pattern>/registrer</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>SecretServlet</servlet-name>
        <servlet-class>no.hvl.dat104.controller.SecretServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SecretServlet</servlet-name>
        <url-pattern>/secret</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LandingServlet</servlet-name>
        <servlet-class>no.hvl.dat104.controller.LandingServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LandingServlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
</web-app>