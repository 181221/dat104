<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <context-param>
        <param-name>timeout</param-name>
        <param-value>60</param-value>
    </context-param>
    <servlet>
        <servlet-name>LandingServlet</servlet-name>
        <servlet-class>pwa.controller.LandingServlet</servlet-class>
        <init-param>
            <param-name>timout</param-name>
            <param-value>10</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>pwa.controller.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegistrerBrukerSerlvet</servlet-name>
        <servlet-class>pwa.controller.RegistrerBrukerSerlvet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HandlelisteServlet</servlet-name>
        <servlet-class>pwa.controller.HandlelisteServlet</servlet-class>
    </servlet>
    <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>pwa.controller.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegistrerBrukerSerlvet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HandlelisteServlet</servlet-name>
        <url-pattern>/handleliste</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LandingServlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
</web-app>
